mixin btn-2({text, icon, counter, isActive, isDisabled, isExtra, onclick})
  button.btn-2(
    class=(isActive ? 'actv' : null)
    class=(isExtra ? 'btn-2--extra' : null)
    disabled=isDisabled
    onclick=(onclick || "window.utils.toggleCssClass(this, 'actv')")
  )
    if icon
      +svg({name: icon, width: 17, height: 17, className: "btn-2__icon"})
    =text
    if counter
      .btn-2__counter=counter
