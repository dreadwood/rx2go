extends ../elements/layout-page
include ../templates/btn-panel
include ../templates/table/table-text
include ../templates/table/table-orders
include ../templates/label/label-status
include ../templates/label/label-info
include ../templates/profile-card
include ../templates/form/form-field-wrp-input
include ../templates/form/form-field-wrp-select
include ../templates/modal

block data
  - title = "Scan: validate Queue, content"


block content
  .scan-page__main
    .scan-page__content
      +btn-panel({activeSection: "Validate Queue"})

      .scan-page__grid
        //- COL 1
        .scan-page__item
          .scan-page__top
            .scan-page__fields
              .scan-page__select-route
                +form-field-wrp-select({color: "blue", value: "Returned"})
              .scan-page__scan
                +form-field-wrp-input({
                  placeholder: "Enter Barcode Numbers, Vendor ID, Equipments",
                  color: "blue"
                })
          .scan-page__title Route Optimized
          .scan-page__label
            +label-status({version: 1})
          .scan-page__table
            include ../mocks/table-data-1
            +table-orders({data: tableData1, isError: true})

        //- COL 2
        .scan-page__item
          .scan-page__top
            +label-info({
              text: "Matched successfully",
              isUppercase: true,
              color: "success"
            })
          .scan-page__title Driver Out
          .scan-page__label
            +label-status({version: 2})
          .scan-page__table
            include ../mocks/table-data-2
            +table-orders({data: tableData2})

block modal
  +modal({
    isErrorHeader: true,
    isSubmitDisabled: true,
    submitText: "Save",
    textareaPlaceholder: "Write how you corrected the error",
    /* textareaError: "Too short a comment" */
  })
