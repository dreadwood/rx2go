extends ../elements/layout-page
include ../templates/btn-panel
include ../templates/filter-panel
include ../templates/table/table-text
include ../templates/table/table-orders
include ../templates/label/label-status
include ../templates/label/label-city
include ../templates/profile-card
include ../templates/form/form-field-wrp-input

block data
  - title = "Scan: ready for delivery, success"


block content
  .scan-page__main
    .scan-page__content
      +btn-panel({activeSection: "Ready for Delivery", counter: 124})

      .scan-page__grid
        //- COL 1
        .scan-page__item
          .scan-page__top
            .scan-page__form
              .scan-page__scan
                +form-field-wrp-input({
                  placeholder: "Enter Barcode Numbers, Vendor ID, Equipments",
                  color: "blue"
                })
            //- PROFILE
            .scan-page__profile
              +profile-card({})
          .scan-page__title Route Optimized
          .scan-page__label
            +filter-panel({})
          .scan-page__table
            include ../mocks/table-data-1
            +table-orders({data: tableData1})

        //- COL 2
        .scan-page__item
          .scan-page__top
            +label-city({text: "Brooklyn", color: "blue", size: "medium"})
          .scan-page__title Driver Out
          .scan-page__label
            +filter-panel({})
          .scan-page__table
            include ../mocks/table-data-2
            +table-orders({data: tableData2})

        //- COL 3
        .scan-page__item
          .scan-page__title Assigned equipments
          .scan-page__label
            +label-status({version: 2})
          .scan-page__table
            +table-text({})
