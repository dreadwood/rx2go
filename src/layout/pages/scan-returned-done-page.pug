extends ../elements/layout-page
include ../templates/btn-panel
include ../templates/filter-panel
include ../templates/table/table-orders
include ../templates/label/label-city
include ../templates/label/label-done
include ../templates/profile-card
include ../templates/form/form-field-wrp-input
include ../templates/form/form-field-wrp-select-input

block data
  - title = "Scan: returned, done"


block content
  .scan-page__main
    .scan-page__content
      +btn-panel({activeSection: "Returned", counter: 124})

      .scan-page__grid
        //- COL 1
        .scan-page__item
          .scan-page__top
            .scan-page__fields
              .scan-page__select-route
                +form-field-wrp-select-input({color: "blue"})
              .scan-page__scan
                +form-field-wrp-input({
                  placeholder: "Enter Barcode Numbers, Vendor ID, Equipments",
                  color: "blue"
                })
            //- PROFILE
            .scan-page__profile
              +profile-card({})
          .scan-page__title Orders for Driver Not Yet Returned
          .scan-page__label
            +label-done({text: "All packages are scanned"})

        //- COL 2
        .scan-page__item
          .scan-page__top
          .scan-page__title Orders for Driver already Returned
          .scan-page__label
            +filter-panel({})
          .scan-page__table
            include ../mocks/table-data-1
            +table-orders({data: tableData1})

        //- COL 3
        .scan-page__item
          .scan-page__title Assigned equipments
          .scan-page__label
            +label-done({text: "All equipments are scanned"})

        //- COL 4
        .scan-page__item
          .scan-page__title Copay Returns
          .scan-page__label
            +label-done({text: "All Copay scanned"})
