extends ../elements/layout
include ../templates/btn-panel
include ../templates/button/btn-4
include ../templates/filter-panel
include ../templates/table/table-orders
include ../templates/label-info
include ../templates/label-city
include ../templates/label-done
include ../templates/profile-card
include ../templates/form/form-field-wrp-input
include ../templates/form/form-field-wrp-select-input

block data
  -
    title = "Scan: returned, done"


block content
  .scan__main
    .scan__content
      +btn-panel({activeSection: "Returned", counter: 124})

      .scan__form-wrp
        .scan__form
          +form-field-wrp-select-input({color: "blue"})
          +form-field-wrp-input({
            placeholder: "Enter Barcode Numbers, Vendor ID, Equipments",
            color: "blue"
          })

      .scan__grid
        .scan__grid-item
          h3.scan__grid-title Orders for Driver Not Yet Returned
          .scan__grid-label
            +label-done({text: "All packages are scanned"})
        .scan__grid-item
          h3.scan__grid-title Orders for Driver already Returned
          .scan__grid-label
            +filter-panel({})
          .scan__grid-table
            include ../mocks/table-data-1
            +table-orders({data: tableData1})
        .scan__grid-item
          h3.scan__grid-title Assigned equipments
          .scan__grid-label
            +label-done({text: "All equipments are scanned"})
        .scan__grid-item
          h3.scan__grid-title Copay Returns
          .scan__grid-label
            +label-done({text: "All Copay scanned"})

    .scan__profile
      +profile-card({})
